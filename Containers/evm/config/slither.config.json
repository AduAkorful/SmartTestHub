{
  "solc": "0.8.18",
  "solc-remaps": [
    "@openzeppelin/=node_modules/@openzeppelin/",
    "@chainlink/=node_modules/@chainlink/"
  ],
  "exclude": [
    "test/",
    "scripts/",
    "migrations/"
  ],
  "exclude-dirs": [
    "node_modules",
    "cache",
    "artifacts",
    "out",
    "lib"
  ],
  "paths": ["contracts/"],
  "fail-fast": false,
  "filter-paths": true,
  "exclude-dependencies": true,
  "exclude-optimization": false,
  "exclude-informational": false,
  "exclude-low": false,
  "exclude-medium": false,
  "exclude-high": false,
  "json": "logs/slither-report.json",
  "sarif": "logs/slither-report.sarif",
  "checklist": true,
  "markdown-root": "logs/",
  "disable-color": true,
  "detectors-to-run": [
    "suicidal",
    "uninitialized-state",
    "uninitialized-storage",
    "arbitrary-send",
    "controlled-delegatecall",
    "reentrancy-eth",
    "reentrancy-no-eth",
    "reentrancy-unlimited-gas",
    "tx-origin",
    "assembly",
    "assert-state-change",
    "boolean-equal",
    "dangerous-unary",
    "deprecated-standards",
    "divide-before-multiply",
    "enum-conversion",
    "erc20-interface",
    "erc721-interface",
    "incorrect-equality",
    "locked-ether",
    "low-level-calls",
    "missing-zero-check",
    "pragma",
    "redundant-statements",
    "solc-version",
    "unchecked-lowlevel",
    "unchecked-send",
    "uninitialized-local",
    "unused-return",
    "unused-state",
    "costly-loop",
    "dead-code",
    "reentrancy-benign",
    "reentrancy-events",
    "timestamp",
    "too-many-digits"
  ]
}
